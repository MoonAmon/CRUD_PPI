extends layout

block content
    img(src='/images/banner-final.png' alt='Banner' style='width: 100%; height: 100%;')
    h1= title
    p Bem-vindo a página de pacientes
    table.table.table-striped.table-bordered
        thead
            tr
                th Nome
                th CPF
                th Idade
                th Dia Consulta
                th Hora Consulta
                th Ações
        tbody
            each paciente in pacientes
                tr
                    td= paciente.nomeCompleto
                    td= paciente.cpf
                    td= paciente.idade
                    td= paciente.diaMarcado
                    td= paciente.horaMarcada
                    td
                        form(method='POST' action='update/' + paciente.cpf display:block)
                            button.btn.btn-primary(type='submit') Atualizar
                        form(method='POST' action='delete/' + paciente.cpf display:block)
                            button.btn.btn-danger(type='submit') Deletar