extends layout

block content
    img(src='/images/banner-final.png' alt='Banner' style='width: 100%; height: 100%;')
    h1= title
    form(method='POST' action='update/' + pacienteFound.cpf )
        label.col-form-label(for='pacienteForm') Selecione o paciente
        select.form-control(name='pacienteForm' id='pacienteForm' onchange='preencherCampos()')
            each paciente in pacientes
                option(value=paciente.cpf selected=(paciente.cpf === pacienteFound.cpf))= paciente.nomeCompleto
        div.form-group
            label(for='cpf') CPF
            input.form-control(type='text' name='cpf' id='cpf' required='required' placeholder='Digite o CPF do paciente' value=pacienteFound.cpf)
            label(for='nomeCompleto') Nome Completo
            input.form-control(type='text' name='nomeCompleto' id='nomeCompleto' required='required' placeholder='Digite o nome completo do paciente' value=pacienteFound.nomeCompleto)
            label(for='idade') Idade
            input.form-control(type='number' name='idade' id='idade' required='required' placeholder='Digite a idade do paciente' value=pacienteFound.idade)
            label(for='diaMarcado') Dia da Consulta
            input.form-control(type='date' name='diaMarcado' id='diaMarcado' required='required' placeholder='Digite o dia da consulta' value=pacienteFound.diaMarcado.toISOString().split('T')[0])
            label(for='horaMarcada') Hora da Consulta
            input.form-control(type='time' name='horaMarcada' id='horaMarcada' required='required' placeholder='Digite o hora da consulta' value=pacienteFound.horaMarcada)
    button.btn.btn-primary(type='submit') Atualizar

block scripts
    script.
        const pacientes = !{JSON.stringify(pacientes)};
    script(src='/javascripts/index.js')